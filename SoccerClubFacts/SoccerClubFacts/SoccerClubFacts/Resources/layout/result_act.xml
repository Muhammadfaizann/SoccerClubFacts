<?xml version="1.0" encoding="utf-8"?>


   <ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"

   
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      
    
    android:background="@drawable/result_1_bg"
    android:scrollbars="none"
    
    android:id="@+id/rvResutBg"
   
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

                
    <ImageView
        android:id="@+id/more_img_result"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/more_img_result"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
       
        />


                         <TextView
        android:id="@+id/factTitle"

         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:gravity="start"
        android:textAlignment="textStart"
        android:text="@string/fact_1_title_eng"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        
      
      
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
                android:layout_marginTop="350dp"
            android:textAllCaps="true"
                
  
        />
    

        
        <TextView
        android:id="@+id/factTxt"
        android:layout_below="@id/factTitle"
        

        
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/fact_1_txt_eng"
        android:textColor="@color/white"
        
        android:textSize="18sp"
        
        
         android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        
        android:layout_marginTop="20dp"
  
        />


                
    <ImageView
                
        android:layout_below="@id/factTxt"
        android:id="@+id/restart_img_result"
        
        android:layout_width="200dp"
        android:layout_height="150dp"
        
        android:src="@drawable/restart_img_result"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                
        />


        </RelativeLayout>



</ScrollView>
